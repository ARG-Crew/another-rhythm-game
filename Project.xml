<?xml version="1.0" encoding="utf-8"?>
<project>
	
	<app title="Another Rhythm Game" file="ARG" packageName="com.h4mster.arg" package="com.h4mster.arg" main="Main" version="0.2.8" company="ARG" />
	<set name="APP_ID" value="0x0100f6c013bbc000" />

	<app preloader="flixel.system.FlxPreloader" />
	<set name="SWF_VERSION" value="11.8" />

	<window width="1280" height="720" fps="" background="#000000" hardware="true" vsync="false" resizable="true"/>

	<set name="BUILD_DIR" value="export/debug" if="debug" />
