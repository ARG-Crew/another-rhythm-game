	<classpath name="source" />
	<assets path="assets" />

	<haxelib name="flixel" />
	<haxelib name="flixel-addons" />
	<haxelib name="flixel-ui" />
	<haxelib name="hxCodec" />

	<haxelib name="faxe" if='switch'/>

	<haxedef name="FLX_NO_FOCUS_LOST_SCREEN" />
	<haxedef name="HXC_DEBUG_TRACE" if="debug" />
	<haxedef name="FLX_NO_DEBUG" unless="debug" />
	<haxedef name="NAPE_RELEASE_BUILD" unless="debug" />
	<haxelib name="hxcpp-debug-server" if="debug"/>
	<haxedef name="webgl" />
	<haxelib name="flixel" />
	
	<haxelib name="linc_luajit" />
	<haxedef name="HXCPP_STACK_LINE" if="desktop" />

	<icon path="ico/logo16.png" size='16'/>
	<icon path="ico/logo32.png" size='32'/>
	<icon path="ico/logo64.png" size='64'/>
	<icon path="ico/logo128.png" size='128'/>
	<icon path="ico/logo256.png" size='256'/>
	<icon path="ico/logo256.png" />

